#include <stdio.h>
#include <string.h>

#define MAX 5
#define TAM_NOME 20

char jogadores[MAX][TAM_NOME];
int total_jogadores = 0;

void entrarNaFila(const char* nome) {
    if (total_jogadores < MAX) {
        strcpy(jogadores[total_jogadores], nome);
        total_jogadores++;
    }
}

void proximoTurno() {
    printf("\nVez de: %s\n", jogadores[0]);
    printf("Pressione ENTER para encerrar o turno (ou digite 'uno' para encerrar o jogo)...\n");

    char input[10];
    fgets(input, sizeof(input), stdin);

    if (strncmp(input, "uno", 3) == 0 || strncmp(input, "Uno", 3) == 0) {
        printf("Jogo encerrado.\n");
        exit(0);  
    }

    char temp[TAM_NOME];
    strcpy(temp, jogadores[0]);

    for (int i = 0; i < total_jogadores - 1; i++) {
        strcpy(jogadores[i], jogadores[i + 1]);
    }

    strcpy(jogadores[total_jogadores - 1], temp);
}

int main() {
    entrarNaFila("VocÃª");
    entrarNaFila("Jesse");
    entrarNaFila("Rafaela");
    entrarNaFila("Fabio");

    int rodada = 1;
    while (1) {  
        printf("\n======= RODADA %d =======\n", rodada);
        proximoTurno();
        rodada++;
    }

    return 0;
}
